<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_8"
    android:layout_marginTop="@dimen/size_8"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_place_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_8"
        android:background="@drawable/bg_circle_blue_full"
        android:padding="@dimen/size_8"
        app:srcCompat="@drawable/ic_restaurant_white" />

    <TextView
        android:id="@+id/tv_name_place_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_4"
        android:layout_alignTop="@id/img_place_type"
        android:layout_alignBottom="@id/img_place_type"
        android:layout_toRightOf="@id/img_place_type"
        android:gravity="center_vertical"
        android:text="adsdasdasd"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_sub_place_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_place_type"
        />

</RelativeLayout>