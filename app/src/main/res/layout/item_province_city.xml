<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/size_8">

    <android.support.v7.widget.CardView
        android:id="@+id/card_province_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_radius_height"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false"
        app:elevation="0dp">

        <ImageView
            android:id="@+id/img_province_city"
            android:layout_gravity="top"
            android:layout_width="@dimen/with_image_trip_small"
            android:layout_height="@dimen/height_image_trip_big"
            android:src="@drawable/demo_city"
            android:scaleType="center"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="@dimen/size_8"
        android:text="Hà Nội"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_medium"/>

</LinearLayout>
