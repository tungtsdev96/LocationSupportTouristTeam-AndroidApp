<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_scrim">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginRight="@dimen/size_16"
        android:background="@drawable/bg_dialog_choose_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/size_16"
            android:text="@string/add_on"
            android:background="@color/green_900"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:textSize="@dimen/text_size_big"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_margin="@dimen/size_8"/>

        <android.support.v7.widget.CardView
            android:id="@+id/card_done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_marginRight="@dimen/size_16"
            android:layout_marginBottom="@dimen/size_8"
            app:cardBackgroundColor="@color/color_pink"
            app:cardCornerRadius="@dimen/size_4">

            <TextView
                android:id="@+id/tv_done"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/trip_done"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:padding="@dimen/size_16"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>