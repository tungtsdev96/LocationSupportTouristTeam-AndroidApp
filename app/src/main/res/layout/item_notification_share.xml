<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/rlt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.svmc.android.locationsupportteam.ui.customviews.CircleImageView
            android:layout_centerVertical="true"
            android:id="@+id/civ_profile"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_marginRight="@dimen/size_8"
            android:layout_marginTop="@dimen/size_8"
            android:layout_marginBottom="@dimen/size_8"
            android:layout_width="@dimen/size_avatar"
            android:layout_height="@dimen/size_avatar" />

        <LinearLayout
            android:layout_marginTop="@dimen/size_8"
            android:layout_marginBottom="@dimen/size_8"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/civ_profile"
            android:layout_toLeftOf="@id/btn_more"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_8"
                android:textColor="@color/colorBlack"
                android:text="Son Tung da moi ban vao nhom Ba dao dde cung chia ve vi tri"/>

            <RelativeLayout
                android:layout_marginTop="@dimen/size_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_content"
                android:layout_alignLeft="@+id/tv_content">

                <TextView
                    android:id="@+id/tv_last_time_created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 phut truoc"
                    android:textColor="@color/color_primary_dark_blue"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginLeft="@dimen/size_8"/>

            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_more"
            android:layout_margin="@dimen/size_8"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_more_black"
            android:padding="@dimen/size_8"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"/>

    </RelativeLayout>

    <TextView
        android:textSize="@dimen/text_size_medium"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_mesage"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/rlt_content"
        android:layout_marginLeft="@dimen/size_16"
        android:layout_marginTop="@dimen/size_8"
        android:text="Tin nhắn: Tập chung ở đây"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="@dimen/size_16"
        android:layout_marginBottom="@dimen/size_16"
        android:layout_centerHorizontal="true"
        android:id="@+id/img_attach"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_below="@id/tv_mesage"/>

</RelativeLayout>