<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/card_radius_height"
        app:cardUseCompatPadding="true"
        app:cardElevation="@dimen/card_elevation_medium"
        app:cardPreventCornerOverlap="false"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_trip"
                    android:layout_gravity="top"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_image_trip_big"
                    android:src="@drawable/demo"
                    android:scaleType="center"/>

                <TextView
                    android:id="@+id/tv_long_trip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="@dimen/size_8"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/colorWhite"
                    android:text="3 Ngày"
                    android:background="@color/color_scrim"/>

            </FrameLayout>

            <TextView
                android:id="@+id/tv_city"
                android:padding="@dimen/size_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hà Nội - 3 ngày"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/colorBlack" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
