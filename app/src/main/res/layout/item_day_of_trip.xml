<?xml version="1.0" encoding="utf-8"?>
<com.svmc.android.locationsupportteam.ui.customviews.SquareRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/colorDivider">

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/rlt_create_day_of_trip"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/demo"
                android:scaleType="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_scrim"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="@dimen/size_16"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_above="@+id/ll_choose_on_map"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/colorWhite"
                    android:text="17/11/1996"
                    android:padding="@dimen/size_8"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_medium"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorWhite"/>

                <TextView
                    android:id="@+id/tv_number_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/colorWhite"
                    android:text="Ngày 1"
                    android:padding="@dimen/size_8"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_medium"/>

                <TextView
                    android:id="@+id/tv_count_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/colorWhite"
                    android:text="5 địa điểm"
                    android:textStyle="normal"
                    android:textSize="@dimen/text_size_small"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_choose_on_map"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:background="@color/color_scrim">

                <ImageView
                    android:padding="@dimen/size_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_maker_white"/>

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_choose_on_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/see_on_map"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_medium"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</com.svmc.android.locationsupportteam.ui.customviews.SquareRelativeLayout>