<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlt_more_infor"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:layout_centerVertical="true"
            android:padding="@dimen/size_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/additional_infor_place"
            android:textColor="@color/colorBlack"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            app:srcCompat="@drawable/ic_see_all_black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/size_8"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/rlt_more_infor"
        android:id="@+id/ll_more_infor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_format_address"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_12"
                app:srcCompat="@drawable/ic_location_blue"/>

            <TextView
                android:id="@+id/tv_fomart_address"
                android:layout_centerVertical="true"
                android:padding="@dimen/size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ddaij diem chi tiet"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_phone_number"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical">

            <ImageView
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_12"
                app:srcCompat="@drawable/ic_call_blue"/>

            <TextView
                android:clickable="false"
                android:id="@+id/tv_phone_number"
                android:layout_centerVertical="true"
                android:padding="@dimen/size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0969798271"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_time_open"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_12"
                app:srcCompat="@drawable/ic_time_blue"/>

            <TextView
                android:id="@+id/tv_open_now"
                android:layout_centerVertical="true"
                android:padding="@dimen/size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="đã đóng"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:layout_marginLeft="@dimen/size_4"
                android:id="@+id/tv_time_open"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="Mở cửa lúc 07:30"/>

            <ImageView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_8"
                app:srcCompat="@drawable/ic_see_all_black"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_website"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center_vertical">

            <ImageView
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_12"
                app:srcCompat="@drawable/ic_website_blue"/>

            <TextView
                android:clickable="false"
                android:id="@+id/tv_website"
                android:layout_centerVertical="true"
                android:padding="@dimen/size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="http://............"
                android:textColor="@color/colorBlack"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>